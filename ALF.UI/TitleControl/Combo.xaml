<UserControl x:Class="ALF.UI.TitleControl.Combo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="mainGrid" Height="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <TextBlock  x:Name="titleText" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right"  />
        <Border  Grid.Column="1" Margin="5" >
            <ComboBox    x:Name="valueCombo" Background="Transparent" SelectionChanged="ValueCombo_OnSelectionChanged" VerticalContentAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
