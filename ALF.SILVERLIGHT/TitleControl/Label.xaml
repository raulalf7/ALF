<UserControl x:Class="ALF.SILVERLIGHT.TitleControl.Label"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid x:Name="mainGrid" Height="40">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>
        <TextBlock  x:Name="titleText" Margin="5" VerticalAlignment="Center" HorizontalAlignment="Right"  />
        <Border  Grid.Column="1"  Margin="5" >
            <TextBlock   x:Name="valueText" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</UserControl>
